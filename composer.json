{
    "name":        "netcommons/search-boxes",
    "description": "SearchBoxes Plugin for NetCommons",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "search-boxes"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name":     "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/SearchBoxes/graphs/contributors"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":              "~2.4",
        "cakephp/debug_kit":            "~2.2",
        "cakedc/migrations":            "~2.2",
        "components/jquery":            "~2.1",
        "phpunit/phpunit":              "~3.7.38",
        "sebastian/phpcpd":             "~2.0",
        "twbs/bootstrap":               "~3.1"
    },
    "require-dev": {
        "mustangostang/spyc":           "@dev",
        "satooshi/php-coveralls":       "@dev",
        "netcommons/auth":              "@dev",
        "netcommons/auth-general":      "@dev",
        "netcommons/boxes":             "@dev",
        "netcommons/blocks":            "@dev",
        "netcommons/frames":            "@dev",
        "netcommons/install":           "@dev",
        "netcommons/m17n":              "@dev",
        "netcommons/net-commons":       "@dev",
        "netcommons/pages":             "@dev",
        "netcommons/roles":             "@dev",
        "netcommons/rooms":             "@dev",
        "netcommons/search":            "@dev",
        "netcommons/topics":            "@dev",
        "netcommons/users":             "@dev"
    },
    "config": {
        "vendor-dir": "vendors"
    }
}

